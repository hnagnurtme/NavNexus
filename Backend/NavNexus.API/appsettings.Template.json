{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Neo4j": {
    "Uri": "bolt://localhost:7687",
    "Username": "neo4j",
    "Password": "<your-neo4j-password>"
  },

  "Jwt": {
    "PrivateKeyPath": "Keys/rsa_private.pem",
    "PublicKeyPath": "Keys/rsa_public.pem",
    "KeyId": "NavNexus-version1",
    "Issuer": "NavNexus",
    "Audience": "NavNexusClients"
  },

  "Auth": {
    "RefreshTokenLifetimeDays": 7
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "User": "<your-email>@gmail.com",
    "Password": "<your-app-password>",
    "From": "NavNexus <your-email@gmail.com>"
  }
}
